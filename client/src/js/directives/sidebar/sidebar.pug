aside.app-sidebar
  .app-sidebar__user
    img.app-sidebar__user-avatar(ng-src='{{userPhoto}}', alt='User Image')
    div
      p.app-sidebar__user-name {{userName}}
      p.app-sidebar__user-designation {{userBio}}
  ul.app-menu
    li(ng-repeat="module in sideBar", ng-class="{'treeview': module.isTree, 'is-expanded': active}", ng-click="active=!active && userModules[$index]")
      a.app-menu__item(ui-sref-active="active", ui-sref='{{module.route}}', ng-if="!module.isTree", ng-class="{'text-muted disabled': !userModules[$index]}", ng-disabled="!userModules[$index]")
        i.app-menu__icon.fa(class="{{module.icon}}")
        span.app-menu__label {{module.name}}
        span.badge.badge-secondary(ng-if="!userModules[$index]") Indisponível
        | &nbsp;&nbsp;&nbsp;&nbsp;
      div(ng-if="module.isTree")
        a.app-menu__item(href='#', data-toggle='treeview', ng-class="{'text-muted disabled': !userModules[$index]}", ng-disabled="!userModules[$index]")
          i.app-menu__icon.fa(class="{{module.icon}}")
          span.app-menu__label {{module.name}}
          span.badge.badge-secondary(ng-if="!userModules[$index]") Indisponível
          | &nbsp;&nbsp;
          i.treeview-indicator.fa.fa-angle-right
        ul.treeview-menu
          li(ng-repeat="submodule in module.branchs")
            a.treeview-item(ui-sref='{{submodule.route}}', href='')
              i.icon.fa.fa-angle-right
              |  {{submodule.name}}