section
	go-back(message="pizzaOrder.name")
	.space-top
	h2.titulo
		| {{(pizzaOrder.maxFlavors > 1) ? 'Quantos Sabores?' : 'Qual Sabor?'}}
	.container(ng-if='pizzaOrder.maxFlavors > 1')
		.button-wrap
			.row
				.col(ng-repeat='i in pizzaOrder.maxFlavors | range')
					input.hidden.radio-label.rb(type='radio', id='n_{{i}}' name="qty_flavors")
					label.button-label(for='n_{{i}}', ng-click='setUserMax(i)')
						h1 {{i}}
	#selecao-sabores(ng-show='issetUserMax || pizzaOrder.maxFlavors == 1')
		h2.titulo(ng-if='pizzaOrder.maxFlavors > 1') Escolha os sabores
		.row.text-center
			.col
				input#sd_1.hidden.radio-label.rb(type='radio', ng-click="selected = 'savory'" name='salgado_doce')
				label.button-label(for='sd_1')
					h1 Salgadas
			.col
				input#sd_2.hidden.radio-label.rb(type='radio', ng-click="selected = 'sweet'" name='salgado_doce')
				label.button-label(for='sd_2')
					h1 Doces
		//- TODO: Tornar diretiva
		#sabores-salgados.container(ng-show="selected == 'savory'")
			article(ng-repeat='savory in menu.pizzas.flavors.savory')
				input.cb(type='checkbox', ng-checked='selectedFlavors.ids[savory.id]')
				label.cb-label(ng-click='addFlavor(savory)')
					.row
						.col-2
						.col-10
							.row
								.col-9
									.sabor-pizza {{savory.flavor}}
								.col-3
									.preco-pizza(ng-if="savory.price>0") R${{savory.price}}
							.row
								.descricao-pizza {{savory.description}}
		#sabores-salgados.container(ng-show="selected == 'sweet'")
			article(ng-repeat='sweet in menu.pizzas.flavors.sweet')
				input.cb(type='checkbox', ng-checked='selectedFlavors.ids[sweet.id]')
				label.cb-label(ng-click='addFlavor(sweet)')
					.row
						.col-2
						.col-10
							.row
								.col-9
									.sabor-pizza {{sweet.flavor}}
								.col-3
									.preco-pizza(ng-if="sweet.price>0") R${{sweet.price}}
							.row
								.descricao-pizza {{sweet.description}}
	.space-bottom
	a(ng-click='finish()', ng-if="pizzaOrder.flavors.userMax && selectedFlavors.size == pizzaOrder.flavors.userMax")
		.fixed-button
			p CHECAR PEDIDO
