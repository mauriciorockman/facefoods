section
	go-back(dish="Resumo do seu pedido")
	.space-top
	h4.titulo Resumo Do Seu Pedido
	.container
		.row(ng-repeat="order in shoppingCart.orders")
			.col.container-pedido
				.row
					.col.text-right
						//- TODO: Apagar pedido 
						.btn-apagar-prato.fa.fa-times-circle(ng-click="deleteOrder(order.id)")
				.row
					.col
						.card-pedido
							.row
								.col-3
									button.btn-qtd(ng-click="incrementOrder(order.id)")
										i.fa.fa-plus
									.prato-qtd {{order.qty}}
									button.btn-qtd(ng-click="decrementOrder(order.id)")
										i.fa.fa-minus
								.col-9
									order(order='order')
									.row
										.col-9
											.total-produto Subtotal
										.col-3.text-left.nopadding
											.total-produto-preco R${{subTotal(order)}}
	.resumo-total.text-center TOTAL DO PEDIDO R${{total()}}
	a(ui-sref='Menu')
		button.button-label
			p CONTINUAR COMPRANDO
	.space-bottom
	a(ui-sref='entrega' ng-show="pedido.total>0")
		.fixed-button
			p CONFIRMAR PEDIDO
